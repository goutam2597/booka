<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookapp_customer">

    <!-- Internet + (optional) location + notifications -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name="${applicationName}"
        android:label="BookAppCustomer"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true"
        android:enableOnBackInvokedCallback="true">

        <!-- Default notification channel (FCM / local notifications) -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="push_channel" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Splash/launch theme -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Main launcher intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- ===== Deep links for hosted checkouts returning to app ===== -->

            <!-- PhonePe return: myapp://phonepe-return?... -->
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="myapp" android:host="phonepe-return" />
            </intent-filter>

            <!-- Flutterwave return: myapp://flutterwave-finish?... -->
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="myapp" android:host="flutterwave-finish" />
            </intent-filter>

            <!-- PayPal return: myapp://paypal-finish?... -->
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="myapp" android:host="paypal-finish" />
            </intent-filter>

            <!-- Paystack return: myapp://paystack-finish?... -->
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="myapp" android:host="paystack-finish" />
            </intent-filter>

            <!-- (Optional) Stripe return if you ever use a custom scheme -->
            <!--
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="myapp" android:host="stripe-finish" />
            </intent-filter>
            -->
        </activity>

        <!-- Flutter-generated plugin registration -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- ===== Package visibility (Android 11+) for external UPI/payment handlers ===== -->
    <queries>
        <!-- Generic VIEW of UPI deep links (upi://pay, etc.) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="upi" />
        </intent>

        <!-- PhonePe -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="phonepe" />
        </intent>
        <package android:name="com.phonepe.app" />

        <!-- Google Pay (Tez) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="tez" />
        </intent>
        <package android:name="com.google.android.apps.nbu.paisa.user" />

        <!-- Paytm -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="paytm" />
        </intent>
        <package android:name="net.one97.paytm" />

        <!-- If you open standard https links externally, this helps visibility -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>

        <!-- Already present: text processing apps -->
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
